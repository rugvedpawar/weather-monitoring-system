    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<body>
<canvas id="myChart" style="width:100%;max-width:600px"></canvas>

<script>
var xValues = [1.35,1.36,1.37,1.38];
var yValues = [36,36,37,36];

new Chart("myChart", {
  type: "line",
  data: {
    labels: xValues,
    datasets: [{
      fill: false,
      lineTension: 0,
      backgroundColor: "rgba(100,10,10,1.0)",
      borderColor: "rgba(100,50,10,0.5)",
      data: yValues
    }]
  },
  options: {
    legend: {display: false,},
    scales: {
      yAxes: [{ticks: {min: 0, max:100}}],
    }
  },
  options: {
            scales: {
              xAxes: [{ 
                scaleLabel: {
                  display: true,
                  labelString: 'time'
                }
              }],
              yAxes: [{
                scaleLabel: {
                  display: true,
                  labelString: 'temperature'
                }
              }],
            }
          },
});
</script>

